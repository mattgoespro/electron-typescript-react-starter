{
  "author": "mattgoesspro",
  "name": "electron-typescript-react-starter",
  "description": "Electron starter project template using React and TypeScript.",
  "main": "./src/main/main.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./webpack/config.renderer.dev.ts",
    "start-with-resources": "cross-env NODE_ENV=development USE_RESOURCE_DEVTOOLS=true TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./webpack/config.renderer.dev.ts",
    "prestart": "ts-node ./scripts/prestart.ts",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./webpack/config.preload.dev.ts",
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./webpack/config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./webpack/config.renderer.prod.ts",
    "build:lib": "webpack --config ./lib/webpack.lib.ts",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "install-packages": "npm install",
    "postinstall": "electron-builder install-app-deps && cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./webpack/config.renderer.dev.dll.ts",
    "lint": "eslint src",
    "package": "npm run build && electron-builder build --publish never",
    "prepackage": "ts-node ./scripts/prepackage.ts",
    "clean": "concurrently \"node -r ts-node/register scripts/remove-builds.ts\" \"node -r ts-node/register scripts/remove-node-modules.ts\""
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "colors": "^1.4.0",
    "electron-debug": "^3.2.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "jimp": "^0.22.10",
    "pdf2image": "^1.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.19.0",
    "redux-observable": "^2.0.0",
    "sharp": "^0.33.0",
    "styled-components": "^6.1.1",
    "typesafe-actions": "^5.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.4.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@redux-devtools/extension": "^3.3.0",
    "@svgr/webpack": "^8.1.0",
    "@types/detect-port": "^1.3.5",
    "@types/node": "^20.10.4",
    "@types/pdf2image": "^1.2.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "@types/react-test-renderer": "^18.0.7",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "core-js": "^3.34.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "detect-port": "^1.5.1",
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^3.2.0",
    "electronmon": "^2.0.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-import-resolver-webpack": "^0.13.8",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.5.4",
    "mini-css-extract-plugin": "^2.7.6",
    "node-loader": "^2.0.0",
    "prettier": "^3.1.1",
    "react-devtools": "^5.0.0",
    "react-refresh": "^0.14.0",
    "rimraf": "^5.0.5",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "build": {
    "productName": "DesktopToolbox",
    "appId": "com.hoppingmode.desktoptoolbox",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ]
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format",
      "pre-push": "npm run test"
    }
  }
}
